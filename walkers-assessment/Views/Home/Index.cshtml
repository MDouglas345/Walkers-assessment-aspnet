
@{
    ViewData["Title"] = "Step 1";
}

@model ListDataModel

<div class="row justify-content-center">
    <div class="col-lg-8 col-md-12 text-center">
        @for(int i = 1; i <= Model.Entries; i++){
           <p class="@getElementClass(i)">@getElementText(i)</p>
        }
    </div>
</div>

@functions{
    public string getElementText(int i ){
        var outputString = "";

        if (i % 3 == 0 && i % 5 == 0){
            outputString = "walkers assessment";
        }
        else if (i % 3 == 0){
            outputString = "walkers";
        }
        else if (i % 5 == 0)
        {
            outputString = "assessment";
        }
        else{
            outputString = i.ToString();
        }

        return outputString;
    }

    public string getElementClass(int i ){
        return "";
    }
}
